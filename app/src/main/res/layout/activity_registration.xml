<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.darknight.mi2016.RegistrationActivity">

    <Button
        android:text="@string/register_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerLater"
        android:background="#000000"
        android:textColor="#a9a8a2"
        android:textAllCaps="false"
        android:textSize="27sp"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />

    <Button
        android:drawableEnd="@drawable/arrow1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:background="#000000"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/registerLater"
        android:layout_alignParentEnd="true" />
        android:id="@+id/submit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userInputField"
        android:layout_alignBottom="@+id/userInputField"
        android:layout_alignParentEnd="true"
        android:background="#000000"
        android:drawableRight="@drawable/arrow1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="#a9a8a2"
        android:id="@+id/userInputField"
        android:backgroundTint="#a9a8a2"
        android:textSize="27sp"
        android:fontFamily="sans-serif-light"
        android:textCursorDrawable="@null"
        android:textColor="#a9a8a2"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignParentStart="true" />
</RelativeLayout>
