<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.darknight.mi2016.LoginActivity">

    <Button
        android:text="Register Later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textSize="27sp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/grey"
        android:layout_marginBottom="36dp"
        android:id="@+id/register_later"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:drawableEnd="@drawable/arrow1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_submit"
        android:background="#000000"
        android:visibility="gone"
        android:layout_alignTop="@+id/mi_number_input"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/mi_number_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#a9a8a2"
        android:backgroundTint="#a9a8a2"
        android:ems="10"
        android:textSize="27sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#a9a8a2"
        android:visibility="gone"
        android:layout_above="@+id/register_later"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_toStartOf="@+id/login_submit" />

    <Button
        android:text="Log in"
        android:background="@color/com_facebook_blue"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mi_number"
        android:layout_above="@+id/register_later"
        android:layout_marginBottom="18dp"
        android:layout_alignStart="@+id/register_later"
        android:layout_alignEnd="@+id/register_later" />

</RelativeLayout>
