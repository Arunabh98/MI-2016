<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">


    <Button
        android:text="Competitions"
        android:id="@+id/competitions"
        android:paddingTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:background="@color/black"
        android:textSize="25sp"
        android:paddingBottom="30dp"/>

    <Button
        android:text="Concerts"
        android:id="@+id/concerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:background="@color/black"
        android:textSize="25sp"
        android:paddingBottom="30dp"/>

    <Button
        android:text="Proshows"
        android:id="@+id/proshows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:background="@color/black"
        android:textSize="25sp"
        android:paddingBottom="30dp"/>

    <Button
        android:text="Informals"
        android:id="@+id/informals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:background="@color/black"
        android:textSize="25sp"
        android:paddingBottom="30dp"/>

    <Button
        android:text="Workshops"
        android:id="@+id/workshops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:background="@color/black"
        android:textSize="25sp"
        android:paddingBottom="30dp"/>

    <Button
        android:paddingBottom="30px"
        android:id="@+id/mi_tour"
        android:text="MI Tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:background="@color/black"
        android:textSize="25sp"/>
</LinearLayout>